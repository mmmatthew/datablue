{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
     // TODO update once webpack bug regarding ?? is fixed
     "target": "es2019",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "outDir": "build",
    "sourceMap": true,
     "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  }
}
